<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= item ? 'Edit item' : 'Add item' %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/dashboard">Inventory FYP</a>
      <div>
        <a class="btn btn-outline-secondary" href="/items">Back to items</a>
        <a class="btn btn-outline-secondary" href="/logout">Logout (<%= currentUser ? currentUser.username : '' %>)</a>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <h3><%= item ? 'Edit item' : 'Add item' %></h3>
    <form method="post" action="<%= action %>" class="w-50">
      <div class="mb-3"><label>Name</label><input name="name" class="form-control" required value="<%= item ? item.name : '' %>"></div>
      <div class="mb-3"><label>SKU</label><input name="sku" class="form-control" value="<%= item ? item.sku : '' %>"></div>
      <div class="mb-3"><label>Quantity</label><input name="quantity" type="number" class="form-control" value="<%= item ? item.quantity : 0 %>"></div>
      <div class="mb-3"><label>Location</label><input name="location" class="form-control" value="<%= item ? item.location : '' %>"></div>
      <div class="mb-3"><label>Notes</label><textarea name="notes" class="form-control"><%= item ? item.notes : '' %></textarea></div>
      <button class="btn btn-primary">Save</button>
    </form>
  </div>
</body>
</html>
